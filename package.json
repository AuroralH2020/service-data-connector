{
  "name": "service-data-connector",
  "version": "0.0.1",
  "description": "Service Data Connector",
  "main": "server.js",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "sonar": "node sonar-client.js",
    "start:watch": "nodemon ./dist/src/server.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "prod": "concurrently \"npm run build\" \"npm run start\""
  },
  "author": "Jorge Almela",
  "license": "MIT",
  "dependencies": {
    "@influxdata/influxdb-client": "^1.29.0",
    "@influxdata/influxdb-client-apis": "^1.29.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.1",
    "got": "^11.8.1",
    "jsonwebtoken": "^8.5.1",
    "stoppable": "^1.1.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/got": "^9.6.12",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/stoppable": "^1.1.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "concurrently": "^7.2.2",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.16",
    "ts-jest": "^27.1.3",
    "typescript": "^4.7.4"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__mocks__/",
      "/__tests__/",
      "/scripts/",
      "/coverage/"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
